---
interface Props {
  matchStatus: string;
  matchDate: string;
  homeName: string;
  awayName: string;
  homeCrest: string;
  awayCrest: string;
  awayScore: string;
  homeScore: string;
}

const {
  matchStatus,
  matchDate,
  homeName,
  awayName,
  homeCrest,
  awayCrest,
  awayScore,
  homeScore,
} = Astro.props;

// https://docs.football-data.org/general/v4/match.html#_status_workflow_explained
function formatMatchStatus(status: any) {
  switch (status) {
    case "FINISHED":
      return { text: "Full-time" };
    case "TIMED":
    case "SCHEDULED":
      return "";
    case "IN_PLAY":
    case "PAUSED":
      return { text: "Live", className: "live" }; // Red "Live"
    default:
      return status;
  }
}

function formatDate(dateString: string) {
  const date = new Date(dateString); // Assuming dateString is in UTC

  // Ensure consistent timezones
  const today = new Date();
  const yesterday = new Date(today);
  yesterday.setUTCDate(today.getUTCDate() - 1);
  const tomorrow = new Date(today);
  tomorrow.setUTCDate(today.getUTCDate() + 1);

  // Compare dates in UTC
  if (
    date.getUTCDate() === today.getUTCDate() &&
    date.getUTCMonth() === today.getUTCMonth() &&
    date.getUTCFullYear() === today.getUTCFullYear()
  ) {
    return (
      "Today at " +
      date.toLocaleTimeString([], { hour: "numeric", minute: "2-digit" })
    );
  } else if (
    date.getUTCDate() === yesterday.getUTCDate() &&
    date.getUTCMonth() === yesterday.getUTCMonth() &&
    date.getUTCFullYear() === yesterday.getUTCFullYear()
  ) {
    return (
      "Yesterday at " +
      date.toLocaleTimeString([], { hour: "numeric", minute: "2-digit" })
    );
  } else if (
    date.getUTCDate() === tomorrow.getUTCDate() &&
    date.getUTCMonth() === tomorrow.getUTCMonth() &&
    date.getUTCFullYear() === tomorrow.getUTCFullYear()
  ) {
    return (
      "Tomorrow at " +
      date.toLocaleTimeString([], { hour: "numeric", minute: "2-digit" })
    );
  }

  const options: Intl.DateTimeFormatOptions = {
    day: "numeric",
    weekday: "short",
    month: "short",
  };

  return (
    date.toLocaleDateString("en-GB", options) +
    " at " +
    date.toLocaleTimeString([], { hour: "numeric", minute: "2-digit" })
  );
}

// Example usage:
const dateString = "2024-11-03T17:30:00Z";
console.log(formatDate(dateString)); // Output (if run on Nov 2nd): "Tomorrow at 5:30 PM"
---

<article class="link-card">
  <header>
    <h3>
      {formatDate(matchDate)}
    </h3>

    {
      formatMatchStatus(matchStatus) && (
        <span class={formatMatchStatus(matchStatus).className}>
          {formatMatchStatus(matchStatus).text}
        </span>
      )
    }
  </header>
  <div class="details">
    <div class="team">
      <div class="left">
        <img src={homeCrest} alt=`Crest for {homeName}` />
        <h4>{homeName ? homeName : "Home Team"}</h4>
      </div>
      <span class="score">{homeScore}</span>
    </div>
    <div class="team">
      <div class="left">
        <img src={awayCrest} alt=`Crest for {awayName}` />
        <h4>{awayName ? awayName : "Away Team"}</h4>
      </div>
      <span class="score">{awayScore}</span>
    </div>
  </div>
</article>

<style>
  /* Existing styles */
  .link-card {
    list-style: none;
    padding: 2rem;

    display: flex;
    gap: 2rem;
    flex-direction: column;

    background-color: #23262d;
    border-radius: 1rem;

    margin-bottom: 2rem;

    header {
      display: flex;
      align-items: baseline;
      justify-content: space-between;

      h3,
      span {
        font-size: 1rem;
        font-weight: 400;
      }
      .live {
        color: red;
        font-weight: 600;
      }
    }

    .details {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      .team {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        height: var(
          --font-size-score
        ); /* So teams without scores don't collapse in height */

        .left {
          flex: 1;
          display: flex;
          flex-direction: row;
          gap: 1rem;
          align-items: center;

          img {
            width: 2rem;
          }

          h4 {
            font-weight: 500;
          }
        }
      }

      .score {
        font-size: var(--font-size-score);
        font-weight: 600;
        width: 1ch;
        text-align: center;
        filter: blur(8px);
        transition: 0.3s ease-in-out;
      }
    }
  }
  .link-card.scores-shown {
    .score {
      filter: blur(0);
    }
  }
</style>
